{
  "name": "@james-spears/ts-lib-starter",
  "version": "0.0.6",
  "description": "TypeScript starter template.",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    "require": "./dist/cjs/index.cjs",
    "import": "./dist/index.js"
  },
  "browser": {
    "index.js": "dist/bundles/index.esm.min.js"
  },
  "type": "module",
  "scripts": {
    "start": "node ./dist/index.js",
    "predev": "npm run schema",
    "dev": "nodemon -L --exec \"npm run build && npm run start\" --watch ./src/**",
    "doc": "typedoc ./src/index.ts",
    "schema": "ts-json-schema-generator -p src/app/schema.ts > src/app/schema.json",
    "test": "jest --detectOpenHandles --coverage --no-cache",
    "prebuild": "rm -rf ./dist",
    "build": "rollup -c rollup.config.js",
    "format": "prettier . --write",
    "lint": "eslint -c eslint.config.js . --fix",
    "check": "prettier . --check --log-level silent && eslint -c eslint.config.js .",
    "tidy": "npm run format && npm run lint"
  },
  "author": "James W. Spears",
  "license": "MIT",
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.16.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "jest": "^30.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "rollup": "^4.43.0",
    "supertest": "^7.1.4",
    "ts-json-schema-generator": "^2.4.0",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.21.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jameone/ts-lib-starter.git"
  },
  "files": [
    "dist/**"
  ],
  "bugs": {
    "url": "https://github.com/jameone/ts-lib-starter/issues"
  },
  "homepage": "https://github.com/jameone/ts-lib-starter#readme",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jose": "^6.1.0",
    "mongodb": "^6.19.0",
    "pino": "^9.9.0"
  }
}
